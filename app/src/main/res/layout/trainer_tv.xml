            android:orientation="vertical"
            android:id="@id/trainerSideDrawer"
            android:background="#ffffffff"
            android:layout_width="240.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="48.0dip"
            android:layout_marginRight="10.0dip">
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <LinearLayout
                    android:gravity="left"
                    android:orientation="vertical"
                    android:id="@id/trainerLinearLayout2"
                    android:paddingTop="40.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </ScrollView>
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@id/trainerViewPager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="48.0dip">
            <android.support.v4.view.PagerTitleStrip
                android:textSize="16.0sp"
                android:textColor="#ffffffff"
                android:layout_gravity="top"
                android:id="@id/trainerPagerTitleStrip"
                android:background="@drawable/trainer_header_normal"
                android:padding="2.0dip"
                android:layout_width="fill_parent"
                android:layout_height="57.0dip" />
        </android.support.v4.view.ViewPager>
    </LinearLayout>
</FrameLayout>