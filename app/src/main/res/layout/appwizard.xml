<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/appwizardContentContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <LinearLayout
        android:gravity="bottom|center|right"
        android:padding="30.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/appwizardEditButtonLayout"
            android:background="@drawable/appwizard_edit"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0dip">
            <ImageView
                android:gravity="center"
                android:id="@id/appwizardEditButton"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:src="@drawable/ic_menu_manage"
                android:scaleType="centerInside" />
            <ImageView
                android:gravity="center"
                android:id="@id/appwizardUndoButton"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:src="@drawable/ic_menu_revert"
                android:scaleType="centerInside" />
            <ImageView
                android:gravity="center"
                android:id="@id/appwizardRedoButton"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:src="@drawable/ic_menu_redo"
                android:scaleType="centerInside" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/appwizard_edit"
            android:padding="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:gravity="center"
                android:id="@id/appwizardModeButton"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:src="@drawable/ic_menu_edit"
                android:scaleType="centerInside" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>