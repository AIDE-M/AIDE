<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="1000.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="1000.0dip">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@id/searchbrowserProgress"
            android:padding="20.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minWidth="1500.0dip">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                style="@style/BrowserProgress" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@id/searchbrowserResults"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <com.aide.ui.views.CustomKeysListView
                android:id="@id/searchbrowserList"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                style="@style/BrowserListView" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>