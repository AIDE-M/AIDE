<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:id="@id/outputFrame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="1000.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.aide.ui.views.CodeEditTextScrollView
        android:fadingEdge="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <HorizontalScrollView
            android:scrollbars="none"
            android:fadingEdge="none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    style="@style/TrainerHeaderOuter">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@id/outputHeaderLearnTask"
                        android:focusable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        style="@style/TrainerHeaderInner">
                        <TextView
                            android:textColor="#ffffffff"
                            android:id="@id/outputHeaderLearnTitle"
                            android:paddingLeft="10.0dip"
                            android:paddingTop="10.0dip"
                            android:paddingRight="10.0dip"
                            android:paddingBottom="5.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />
                        <TextView
                            android:textColor="#ffffffff"
                            android:id="@id/outputHeaderLearnMessage"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />
                        <TextView
                            android:textColor="#ffffffff"
                            android:id="@id/outputHeaderButton"
                            android:paddingLeft="10.0dip"
                            android:paddingTop="10.0dip"
                            android:paddingRight="10.0dip"
                            android:paddingBottom="10.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <com.aide.ui.build.OutputConsole
                    android:id="@id/outputConsole"
                    android:background="#00000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <requestFocus />
                </com.aide.ui.build.OutputConsole>
            </LinearLayout>
        </HorizontalScrollView>
    </com.aide.ui.views.CodeEditTextScrollView>
</LinearLayout>