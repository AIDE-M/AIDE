<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:background="#ffffffff"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:textSize="20.0sp"
            android:textColor="#ff333333"
            android:id="@id/shopPopupTitle"
            android:padding="15.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                                                    "
            android:fontFamily="sans-serif-light" />
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@id/shopPopupEntries"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="20.0dip" />
        </LinearLayout>
        <TextView
            android:textSize="14.0sp"
            android:textStyle="italic"
            android:textColor="#ffff0000"
            android:id="@id/shopPopupErrorMessage"
            android:padding="15.0dip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="14.0sp"
            android:textColor="#ff828282"
            android:id="@id/shopPopupHelpMessage"
            android:padding="15.0dip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="110.0dip"
                android:layout_height="30.0dip"
                android:src="@drawable/google_play" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
            <TextView
                android:textSize="16.0sp"
                android:textColor="#ff828282"
                android:gravity="center_vertical"
                android:id="@id/shoppopupHelpButton"
                android:background="?android:selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="Help" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>