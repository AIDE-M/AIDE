<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:entries="@array/pref_language_entries"
        android:title="@string/preference_title_language"
        android:key="app_language"
        android:summary="@string/preference_summary_language"
        android:defaultValue="default"
        android:dialogTitle="@string/preference_dialog_language"
        android:entryValues="@array/pref_language_values" />
    <SwitchPreference
        android:title="@string/preference_title_theme"
        android:key="light_theme"
        android:summary="@string/preference_summary_theme"
        android:defaultValue="true" />
    <SwitchPreference
        android:title="@string/preference_title_tabs"
        android:key="editor_tabs"
        android:summary="@string/preference_summary_tabs" />
    <SwitchPreference
        android:title="@string/preference_title_swipe"
        android:key="browser_swipe"
        android:summary="@string/preference_summary_swipe"
        android:defaultValue="true" />
    <SwitchPreference
        android:title="@string/preference_title_telemetry"
        android:key="send_analytics_data"
        android:summary="@string/preference_summary_telemetry"
        android:defaultValue="false" />
</PreferenceScreen>